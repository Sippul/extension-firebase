name: "Firebase"

platforms:
  android:
    context:
      aaptExtraPackages: ['com.google.android.gms.common']

  arm64-android:
    context:
        flags:      ['-std=c++11']

  armv7-android:
    context:
        flags:      ['-std=c++11']

  ios:
    context:
        flags:      ['-std=c++11','-fcxx-modules', '-fmodules', '-fmodules-search-all', '-fmodules-ts']
